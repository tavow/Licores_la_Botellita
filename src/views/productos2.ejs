<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head', { title: "Productos" }) %>
</head>

<body>
    <header>
        <%- include('partials/header'); %>
    </header>

    <main class="main">
        <section class="last-visit">
            <div class="products">
                <% producto.forEach(function(producto){ %>
                    <article>
                        <!-- <a href="/detalleproducto.html"> -->
                        <a href="/products/<%= producto.id %> ">
                            <img src="../img/<%= producto.categoria %>/<%= producto.img %>"
                                alt="<%= producto.categoria %>" class="product_img">
                        </a>
                        <div class="main-article">
                            <i class="fa-solid fa-cart-plus"></i>
                            <p class="price">$<%= producto.precio %>
                            </p>
                            <h4 class="description">
                                <%= producto.descripcion %>
                            </h4> <br>
                            <h4 class="TamaÃ±obotella">
                                <%= producto.tamano %>
                            </h4> <br>
                            <p class="descuento">
                                <%= producto.descuento %>
                            </p>
                        </div>
                    </article>
                    <% }) %>
        </section>
    </main>

    <footer class="footer-distributed">
        <%- include('partials/footer'); %>
    </footer>

</body>

</html>