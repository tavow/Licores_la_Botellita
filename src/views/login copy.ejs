<!DOCTYPE html>
<%- include('./partials/head', { title: "Iniciar sesión"}) %>

  <body>
    <header>
      <%- include('./partials/header') %>
    </header>

    <main class="main-login">

        <form class="my-form"  method="POST" action="/user/login">
          <div class="container">
              <h1>Iniciar sesión</h1>
                <a class="final-a" href="/register">Registrate</a> <br>
          <div class="grid grid-2">
            <input type="email" name="email" id="email" placeholder="Usuario" value="<%= locals.old ? old.email : null %>">
            <i class="login-icon fa-solid fa-user"></i>
          </div>

          <div class="grid grid-2">
            <!-- <label for="password">Contraseña</label> -->
            <input type="password" name="password" id="password" placeholder="Contraseña">
            <i class="pass-icon fa-solid fa-key"></i>
          </div>

          <div class="box1">
            <div class="checkbox-box">
              <input class="checkbox-input" type="checkbox" name="check_login" id="check_login">
              <label class="checkbox-label" for="check_login">Recordarme</label>
            </div>
            <!-- <div class="forgotpass-box">
              <a class="forgotpass" href="">¿Olvidaste la contraseña?</a>
            </div> -->
          </div>
          
          <div class="submit-box">
            <button class="submit-input" type="submit">Iniciar sesión</button>
          </div>

          <div class="forgotpass-box">
            <a class="forgotpass" href="#">¿Olvidaste la contraseña?</a>
          </div>

          <!-- <div class="final-a-box">
            <div class="div-center">
              <a class="final-a" href="/user/register">
                <button type="button">REGISTRATE</button>
              </a>
            </div>
          </div> -->

        </form>
      </div>

    </main>
    <footer>
      <%- include('./partials/footer') %>
    </footer>
  </body>
  </html>