<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('partials/head', { title: "Productos" }) %>
      </head>

<body>
    <header>
        <%- include('partials/header'); %>
    </header>

    <main class="main">
        <section class="last-visit">
            <div class="products">
                <% for (let i=0; i < producto.length; i++){ %>
                    <article>
                        <a href="/products/<%= producto[i].idproducto %> ">
                            <img src="../img/<%= producto[i].categoria %>/<%= producto[i].img %>"
                                alt="<%= producto[i].categoria %>" class="product_img">
                        </a>
                        <div class="main-article">
                            <i class="fa-solid fa-cart-plus"></i>
                            <p class="price">$<%= producto[i].precio %> </p>
                            <h4 class="description">  <%= producto[i].descripcion %> </h4> <br>
                            <h4 class="TamaÃ±obotella">  <%= producto[i].tamano %>  </h4> <br>
                            <p class="descuento">  <%= producto[i].descuento %>  </p>
                        </div>
                        <br>
                    </article>
                    <% } %>
        </section>
    </main>

    <footer class="footer-distributed">
        <%- include('partials/footer'); %>
    </footer>

</body>

</html>